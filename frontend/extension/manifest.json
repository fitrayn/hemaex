{
  "manifest_version": 3,
  "name": "Doc_HEMA Team - V2",
  "version": "2.0.0",
  "description": "BIN Autofiller & Open Links - Professional Version with Backend Integration",
  "permissions": [
    "activeTab",
    "storage",
    "cookies",
    "notifications",
    "scripting",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Doc_HEMA Team - V2"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "decline-card": {
      "suggested_key": {
        "default": "Ctrl+Shift+X"
      },
      "description": "Fill decline card"
    },
    "active-card": {
      "suggested_key": {
        "default": "Ctrl+Shift+V"
      },
      "description": "Fill active card"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icon48.png"],
      "matches": ["<all_urls>"]
    }
  ]
} 